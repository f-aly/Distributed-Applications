@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add New", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Modules[0].Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modules[0].ModuleId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modules[0].Trimester)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modules[0].Comment)
        </th>
