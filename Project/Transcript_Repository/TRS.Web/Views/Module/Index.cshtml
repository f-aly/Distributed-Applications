            @Html.DisplayFor(modelItem => item.ModuleId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Trimester)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
