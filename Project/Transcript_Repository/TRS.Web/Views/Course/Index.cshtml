@model  TRS.Web.Models.Course.ListViewModel

@{
    ViewBag.Title = "View Courses";
}

<h2>View Courses</h2>

<p>
    @Html.ActionLink("Add New", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Courses[0].CourseId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Courses[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Courses[0].Qualification)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Courses[0].Length)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Courses) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qualification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |
                @Html.ActionLink("Details", "Details", new {  id=item.Id  }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.Id  })
            </td>
        </tr>
    }

</table>